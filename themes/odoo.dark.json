{
    "name": "Odoo Dark Theme",
    "type": "dark",
    "colors": {
        "editor.background": "#2a2a2a",
        "editor.foreground": "#d4d4d4",
        "editorCursor.foreground": "#d4d4d4",
        "editor.lineHighlightBackground": "#3a3a3a",
        "editor.selectionBackground": "#4a4a4a",
        "editorIndentGuide.background": "#444444",
        "editor.lineHighlightBorder": "#333333",
        "activityBar.background": "#1e1e1e",
        "sideBar.background": "#262626"
    },
    "tokenColors": [
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#ff6b6b"
            }
        },
        {
            "scope": "variable",
            "settings": {
                "foreground": "#9cdcfe"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#98c379"
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#a9a9a9",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "support.class",
            "settings": {
                "foreground": "#c586c0"
            }
        },
        {
            "scope": "source.xml",
            "settings": {
                "foreground": "#c5a0c5"
            }
        }
    ]
}
